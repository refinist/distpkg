{
  "name": "distpkg",
  "version": "0.0.4",
  "description": "Post-build tool that generates minimal package.json in dist/ and re-installs deps to ensure bundled code runs correctly",
  "keywords": [
    "dist",
    "package.json",
    "post-build",
    "bun",
    "node",
    "bundler",
    "dependencies",
    "build-tool",
    "deployment",
    "docker",
    "secondary-install",
    "cli",
    "typescript"
  ],
  "homepage": "https://github.com/refinist/distpkg#readme",
  "bugs": {
    "url": "https://github.com/refinist/distpkg/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/refinist/distpkg.git"
  },
  "license": "MIT",
  "author": "Jeff Wang",
  "type": "module",
  "exports": {
    ".": "./dist/index.mjs",
    "./run": "./dist/run.mjs",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./*"
      ]
    }
  },
  "bin": {
    "distpkg": "./dist/run.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsx ./src/run.ts",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "release": "bumpp && pnpm publish",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "prettier": "@refinist/prettier-config",
  "dependencies": {
    "c12": "^3.2.0",
    "cac": "^6.7.14",
    "empathic": "^2.0.0",
    "sort-package-json": "^3.4.0"
  },
  "devDependencies": {
    "@refinist/eslint-config": "^1.0.4",
    "@refinist/prettier-config": "^0.0.4",
    "@types/node": "^22.15.17",
    "@vitest/coverage-v8": "3.2.4",
    "bumpp": "^10.1.0",
    "eslint": "^9.33.0",
    "pkg-types": "^2.2.0",
    "prettier": "^3.6.2",
    "publint": "^0.3.12",
    "tsdown": "^0.14.1",
    "tsx": "^4.20.4",
    "typescript": "^5.8.3",
    "unplugin-unused": "^0.5.2",
    "vitest": "^3.1.3"
  },
  "packageManager": "pnpm@10.14.0",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
